<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layoutDirection="rtl"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linDet"
            android:layoutDirection="rtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/ww"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_subject_bill_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Male"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_price_bill_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_quantity_bill_items"
                android:layout_alignStart="@+id/item_subject_bill_items"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1150"
                android:textColor="@color/colorPrimaryDark"

                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_quantity_bill_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_subject_bill_items"
                android:layout_alignStart="@+id/item_subject_bill_items"
                android:layout_weight="1"
                android:gravity="center"
                android:text="50"
                android:textColor="@color/colorPrimaryDark"

                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_price_totale_bill_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_subject_bill_items"
                android:layout_alignStart="@+id/item_subject_bill_items"
                android:layout_weight="1"
                android:gravity="center"
                android:text="50"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ww"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_bill_items_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/delete" />

            <ImageView
                android:id="@+id/item_bill_items_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/edit" />



        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>