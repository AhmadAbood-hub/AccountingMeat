<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/colorSilver"
    android:elevation="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <LinearLayout
            android:id="@+id/linDet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/ww"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_subject_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="Malacsasccasacscaacse"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_quantity_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:text="50"
                android:textColor="@color/colorPrimaryDark"
                android:maxLines="1"

                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_price_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_quantity_bill_items"
                android:layout_alignStart="@+id/item_subject_bill_items"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:text="1150"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>